{
  "name": "openapi-yaml-to-csv-excel",
  "version": "1.1.0",
  "description": "CLI tool to convert OpenAPI yaml file to CSV/Excel file.",
  "keywords": [
    "openapi",
    "converter",
    "yaml",
    "csv",
    "excel"
  ],
  "homepage": "https://github.com/horitaka/openapi-yaml-to-csv-excel#readme",
  "bugs": {
    "url": "https://github.com/horitaka/openapi-yaml-to-csv-excel/issues"
  },
  "license": "MIT",
  "author": "horitaka",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "bin": {
    "@horitaka/oapi-convert": "dist/index.js",
    "oapi-convert": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/horitaka/openapi-yaml-to-csv-excel.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "commit": "cz",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write '{src,tests}/**/*.{ts,js}'",
    "lint": "eslint --fix '{src,tests}/**/*.{ts,js}'",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch --silent=false --verbose false",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "csv": "^6.2.6",
    "js-yaml": "^4.1.0",
    "ts-node": "^10.9.1",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.18",
    "@types/yargs": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.4",
    "semantic-release": "^20.1.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "branches": [
      "main"
    ]
  }
}
